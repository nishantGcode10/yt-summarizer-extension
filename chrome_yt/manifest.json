{
    "name":"Yt Summarizer",
    "version":"0.1",
    "description":"An extension to summarize a youtbe video in a paragraph throught its transcript",
    "manifest_version": 2,
    "browser_action": {
        "default_icon": {
            "16": "images/replacely16.png",
            "32": "images/replacely32.png",
            "48": "images/replacely48.png",
            "128": "images/replacely128.png"
        }
        ,
        "default_popup":"popup.html"
    },
    
   "permissions":["tabs"],
    "icons": {
        "16": "images/replacely16.png",
        "32": "images/replacely32.png",
        "48": "images/replacely48.png",
        "128": "images/replacely128.png"
    },
    "content_scripts": [
        {
          "matches": ["https://www.youtube.com/*"],
          "js": ["contentScript.js"]
        }
      ],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    }
}